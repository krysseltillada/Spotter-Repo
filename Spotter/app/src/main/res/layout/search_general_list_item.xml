<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_white_bg" >

    <ImageView
        android:id="@+id/general_list_icon"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/place3" />
    <TextView
        android:id="@+id/general_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/general_list_icon"
        android:text="HYATT Hotel"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="@dimen/min_padding"
        android:paddingStart="@dimen/mid_padding"
        android:paddingEnd="@dimen/min_padding"
        android:paddingBottom="@dimen/min_padding"/>

    <TextView
        android:id="@+id/general_list_address"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/general_list_icon"
        android:layout_below="@id/general_list_name"
        android:paddingStart="@dimen/mid_padding"
        android:paddingEnd="@dimen/mid_padding"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:text="Kanan ka sa kanto tapos kaliwa"
        android:textSize="@dimen/min_font_size"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/general_list_icon"
        android:layout_below="@id/general_list_address"
        android:paddingTop="@dimen/min_padding"
        android:paddingStart="@dimen/mid_padding"
        android:paddingBottom="@dimen/min_padding"
        android:text="Php: 1,000,000.00"
        android:textColor="@color/sprayBlue"
        android:textSize="@dimen/min_font_size" />

    <TextView
        android:id="@+id/general_tag_1"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignStart="@id/general_list_name"
        android:gravity="center"
        android:layout_marginStart="@dimen/acc_layout_min_margin"
        android:layout_marginBottom="3dp"
        android:layout_alignBottom="@id/general_list_icon"
        android:background="@drawable/tags_bg"
        android:text="Free Wi-Fi"
        android:textSize="8sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/grade_icon"
        android:layout_width="@dimen/grade_width"
        android:layout_height="@dimen/grade_height"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/general_tag_1"
        android:layout_marginEnd="1dp"
        android:src="@drawable/ic_grade_black_18dp"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/general_rating_digit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/grade_icon"
        android:layout_alignTop="@id/grade_icon"
        android:layout_alignBottom="@id/general_tag_1"
        android:paddingTop="@dimen/min_padding"
        android:paddingBottom="@dimen/min_padding"
        android:text="3.9"
        android:textSize="9sp"/>

</RelativeLayout>