<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_general_viewContainer"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="@dimen/acc_layout_min_margin"
    android:clickable="true"
    app:cardElevation="3dp">

    <ImageView
        android:id="@+id/general_list_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/general_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blackTransparent"
            android:padding="@dimen/min_padding"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/max_font_size" />

        <LinearLayout
            android:id="@+id/holder"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_below="@id/general_list_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/general_list_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/min_padding"
                android:textSize="@dimen/min_font_size" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/min_padding"
                android:layout_marginTop="@dimen/min_padding"
                android:background="@color/colorPrimary"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/price_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/min_padding"
                    android:text="Price Start at"
                    android:textAlignment="center"
                    android:textSize="@dimen/min_font_size"/>

                <TextView
                    android:id="@+id/general_list_price_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_label"
                    android:padding="@dimen/min_padding"
                    android:textAlignment="center"
                    android:textSize="@dimen/min_font_size" />

                <TextView
                    android:id="@+id/rating_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/general_list_price_range"
                    android:padding="@dimen/min_padding"
                    android:text="User Rating"
                    android:textAlignment="center"
                    android:textSize="@dimen/min_font_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_label"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/general_list_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_grade_black_18dp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/general_list_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/holder"
            android:background="@color/transparent"
            android:padding="@dimen/min_padding"
            android:src="@drawable/ic_description_black_24dp"
            android:tint="@color/colorPrimary"/>

        <ImageButton
            android:id="@+id/general_list_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/holder"
            android:layout_marginEnd="@dimen/acc_layout_min_margin"
            android:layout_toStartOf="@id/general_list_view_details"
            android:background="@color/transparent"
            android:padding="@dimen/min_padding"
            android:src="@drawable/ic_explore_black_24dp"
            android:tint="@color/colorPrimary"/>

        <ImageButton
            android:id="@+id/general_list_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/holder"
            android:layout_marginEnd="@dimen/acc_layout_min_margin"
            android:layout_toStartOf="@id/general_list_explore"
            android:background="@color/transparent"
            android:padding="@dimen/min_padding"
            android:src="@drawable/ic_call_black_24dp"
            android:tint="@color/colorPrimary"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
