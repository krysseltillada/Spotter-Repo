<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_white_bg">

    <ImageView
        android:id="@+id/general_list_icon"
        android:layout_width="@dimen/image_size_min"
        android:layout_height="@dimen/image_size_min"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/general_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/general_list_icon"
        android:text="HYATT Hotel"
        android:textColor="@color/colorPrimaryDark"
        android:padding="@dimen/mid_padding"/>

    <TextView
        android:id="@+id/general_list_address"
        android:layout_width="@dimen/textInputLayout_width"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/general_list_icon"
        android:layout_alignBottom="@id/general_list_icon"
        android:paddingTop="@dimen/min_padding"
        android:paddingBottom="@dimen/min_padding"
        android:paddingStart="@dimen/mid_padding"
        android:paddingEnd="@dimen/mid_padding"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:text="Kanan ka sa kanto tapos kaliwa"
        android:textSize="@dimen/min_font_size"/>

    <ImageView
        android:id="@+id/grade_icon"
        android:layout_width="@dimen/grade_width"
        android:layout_height="@dimen/grade_height"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/general_list_icon"
        android:layout_marginEnd="@dimen/acc_layout_min_margin"
        android:paddingBottom="@dimen/min_padding"
        android:src="@drawable/ic_grade_black_18dp"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/general_rating_digit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/grade_icon"
        android:layout_alignBottom="@id/general_list_address"
        android:paddingTop="@dimen/min_padding"
        android:paddingBottom="@dimen/min_padding"
        android:text="3.9"
        android:textSize="@dimen/min_font_size"/>

</RelativeLayout>