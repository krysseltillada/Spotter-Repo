<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/acc_layout_min_margin"
    app:cardElevation="4dp"
    app:contentPadding="@dimen/min_padding">

    <ImageButton
        android:id="@+id/deal_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_insert_invitation_black_36dp"
        android:background="@color/transparent"
        android:tint="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deal_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/acc_layout_min_margin"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/deal_desc"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight=".8"
            android:gravity="fill_horizontal"
            android:padding="@dimen/min_padding"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:textSize="@dimen/min_font_size" />

    </LinearLayout>

</android.support.v7.widget.CardView>