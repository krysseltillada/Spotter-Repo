<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_view_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleGravity="left"
            app:expandedTitleTextAppearance="@style/collapsingToolbarStyle"
            app:collapsedTitleTextAppearance="@style/collapsingToolbarStyle"
            app:contentScrim="@color/blackTransparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/action_bar_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:src="@drawable/place1"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/action_bar_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="80dp"
                android:background="@color/transparent"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:layout_collapseMode="pin" />

            <RelativeLayout
                android:id="@+id/place_detail_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:background="@color/blackTransparent" >

                <ImageView
                    android:id="@+id/place_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/place_icon_logo"/>

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/place_icon"
                    android:layout_toEndOf="@id/place_icon"
                    android:padding="@dimen/mid_padding"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/place_content_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/place_icon"
                    android:layout_toEndOf="@id/place_icon"
                    android:paddingTop="@dimen/min_padding"
                    android:paddingBottom="@dimen/min_padding"
                    android:paddingStart="@dimen/mid_padding"
                    android:paddingEnd="@dimen/mid_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/max_font_size"/>

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/search_content_wrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true">

            <FrameLayout
                android:id="@+id/search_content_holder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true" />

            <FrameLayout
                android:id="@+id/map_content_holder"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:fillViewport="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/mid_padding"
                android:text="Reviews"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:stepSize="0.5"
                android:numStars="5"
                android:rating="3.5" />

            <include
                layout="@layout/recycler_view_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>