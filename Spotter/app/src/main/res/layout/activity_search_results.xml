<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_view_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/search_nsview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/search_content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/search_content_holder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true" />

            <FrameLayout
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/layout_white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/showAllSearchResults"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text = "Show all"/>

            </FrameLayout>



            <LinearLayout
                android:background="@drawable/layout_white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/mid_padding"
                    android:text="Direction"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"/>

                <FrameLayout
                    android:id="@+id/map_content_holder"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:fillViewport="true"/>

            </LinearLayout>


            <FrameLayout
                android:background="@drawable/layout_white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/mid_padding"
                        android:text="User Reviews (30)"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="13dp"
                        android:backgroundTint="#757575"
                        android:background="@drawable/ic_person_black_48dp"/>

                </LinearLayout>



            </FrameLayout>

            <LinearLayout
                android:layout_marginTop="-7dp"
                android:background="@drawable/layout_white_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:paddingTop="10dp"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:rating="3.5"
                        android:isIndicator="true"
                        android:stepSize="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="3.5 Stars"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginStart="41dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:backgroundTint="#757575"
                            android:background="@drawable/ic_thumb_up_black_48dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 People recommend this"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:backgroundTint="#757575"
                                android:background="@drawable/ic_bookmark_black_48dp"/>

                        <TextView
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 People bookmarked this"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <include
                layout="@layout/recycler_view_layout"
                android:layout_width="match_parent"
                android:layout_height="375dp" />

            <FrameLayout
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/layout_white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text = "Show all"/>

            </FrameLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/collapsingToolbarStyle"
            app:contentScrim="@color/blackTransparent"
            app:expandedTitleGravity="left"
            app:expandedTitleTextAppearance="@style/collapsingToolbarStyle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/action_bar_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/place1"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/action_bar_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed" />

            <RelativeLayout
                android:id="@+id/description_tab_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <RelativeLayout
                    android:id="@+id/place_detail_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blackTransparent"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/place_icon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:contentDescription="@string/place_icon_logo"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        android:id="@+id/place_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/place_icon"
                        android:layout_toEndOf="@id/place_icon"
                        android:padding="@dimen/mid_padding"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>

                    <TextView
                        android:id="@+id/place_content_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/place_icon"
                        android:layout_toEndOf="@id/place_icon"
                        android:paddingBottom="@dimen/min_padding"
                        android:paddingEnd="@dimen/mid_padding"
                        android:paddingStart="@dimen/mid_padding"
                        android:paddingTop="@dimen/min_padding"
                        android:textColor="@color/white"
                        android:textSize="@dimen/max_font_size"/>

                </RelativeLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/search_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/place_detail_holder"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:tabBackground="@color/colorPrimary"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/colorAccent"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/white">

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotels"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restaurants"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tourist Spots"/>

                </android.support.design.widget.TabLayout>

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/loading_img_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="This will hold the gif for loading" />

        <TextView
            android:id="@+id/loading_error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/mid_padding" />

        <TextView
            android:id="@+id/loading_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loading_img_holder"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/mid_padding" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>