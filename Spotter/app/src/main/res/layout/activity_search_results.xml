<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleGravity="left"
            app:contentScrim="@color/blackTransparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/action_bar_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/traveler_bg3"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/action_bar_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="100dp"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:layout_collapseMode="pin" />

            <android.support.design.widget.TabLayout
                android:id="@+id/search_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:tabBackground="@color/blackTransparent"
                app:tabTextColor="@color/white"
                app:tabGravity="fill"
                app:tabSelectedTextColor="@color/white"
                app:tabIndicatorColor="@color/colorAccent"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/place_detail_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:background="@color/blackTransparent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/place_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/place_icon_logo"/>

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/place_icon"
                    android:layout_toEndOf="@id/place_icon"
                    android:padding="@dimen/mid_padding"
                    android:text="Hotel"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/place_content_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/place_icon"
                    android:layout_toEndOf="@id/place_icon"
                    android:paddingTop="@dimen/min_padding"
                    android:paddingBottom="@dimen/min_padding"
                    android:paddingStart="@dimen/mid_padding"
                    android:paddingEnd="@dimen/mid_padding"
                    android:text="Hotel Content Description"
                    android:textSize="@dimen/max_font_size"/>

            </RelativeLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/search_content_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>