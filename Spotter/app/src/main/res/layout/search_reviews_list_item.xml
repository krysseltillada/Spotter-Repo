<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/layout_white_bg">

    <android.support.v7.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="35dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:thicknessRatio="0.5">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            android:src="@drawable/place2" />


    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:text="krysseltillada"/>

    <TextView
        android:id="@+id/search_review_msg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="@dimen/min_padding"
        android:maxLines="5"
        android:textAlignment="textStart"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:text="This is exciting. I do not want to be in this hotel anymore. But do you even care? I guess not because nothing is real, nothing is true"
        android:textSize="@dimen/min_font_size"/>

        <ImageView
            android:id="@+id/grade_icon"
            android:layout_width="@dimen/grade_width"
            android:layout_height="@dimen/grade_height"
            android:src="@drawable/ic_grade_black_18dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-75dp"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/general_rating_digit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="-15dp"
            android:text="3.9"
            android:textSize="9sp"/>

    </LinearLayout>



</LinearLayout>