<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_white_bg">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/place2"
        android:scaleType="centerCrop"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/min_padding"
        android:maxLines="5"
        android:ellipsize="end"
        android:text="This is exciting. I do not want to be in this hotel anymore. But do you even care? I guess not because nothing is real, nothing is true"
        android:textSize="@dimen/min_font_size"/>
    
</LinearLayout>