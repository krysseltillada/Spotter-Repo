<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/layout_white_bg">


        <ImageView
            android:id="@+id/itemRowBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="most popular places"
            android:scaleType="centerCrop" />


        <TextView

            android:id="@+id/txtPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Pico Cove Hotel"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="Batangas"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:text="â‚±200.00"
             />

        <TextView
            android:id="@+id/txtReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="70dp"
            android:textColor = "@color/sprayBlue"
            android:text="Good (304 reviews)"
            />
        <!--
        <RatingBar
            android:id="@+id/placeRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="90dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5" /> -->

        <TextView
            android:id="@+id/general_rating_digit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="91dp"
            android:paddingBottom="@dimen/min_padding"
            android:paddingTop="@dimen/min_padding"
            android:text="3.9"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/placeCompanyLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/traveler_bg3" />

        <ImageView
            android:id="@+id/grade_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="93dp"
            android:alpha="0.5"
            android:src="@drawable/ic_grade_black_18dp" />

</FrameLayout>

