<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/placeItemRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:padding="10dp"
    android:layout_alignParentTop="true"
    android:clickable="true">


                <ImageView
                    android:id="@+id/itemRowBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="most popular places"
                    android:scaleType="centerCrop" />


                <TextView

                    android:id="@+id/txtPlaceName"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:text="Pico Cove Hotel"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="6dp"
                    android:text="Batangas"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtRecommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="62dp"
                    android:text="200 people recommend this"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="34dp"
                    android:text="â‚±200.00 - 50000.00"
                    android:textSize="12sp" />

                <!--
                <RatingBar
                    android:id="@+id/placeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="90dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5" /> -->

    <ImageView
                    android:id="@+id/gradeIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="100dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_grade_black_18dp" />

                <TextView
                    android:id="@+id/txtGeneralRatingDigit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="36dp"
                    android:layout_marginTop="100dp"
                    android:paddingBottom="@dimen/min_padding"
                    android:paddingTop="@dimen/min_padding"
                    android:text="3.9"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="82dp"
                    android:text="Good (304 reviews)"
                    android:textSize="12sp" />

    <ImageView
        android:id="@+id/placeCompanyImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp" />


</android.support.v7.widget.CardView>

