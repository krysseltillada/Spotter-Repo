<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/mid_padding"
        android:text="About"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/place_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="15"
        android:padding="@dimen/mid_padding"
        android:lineSpacingMultiplier="1.2"
        android:text="Hotel is about something that I cannot think about but I still have to do this for layout purposes but I must admin that I cannot think of anything to say so I'll just say whatever it is to say."/>

    <include
        layout="@layout/recycler_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mid_padding"
        android:gravity="center"
        android:text="Insert hotel, resto or tourist spots sample pic dynamically."/>

</LinearLayout>